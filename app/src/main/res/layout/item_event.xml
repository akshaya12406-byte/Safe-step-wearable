<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/spacing_sm"
    style="@style/SafeStepCard"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Main Content Row -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/card_padding">

            <!-- Event Type Icon -->
            <FrameLayout
                android:id="@+id/eventIconContainer"
                android:layout_width="@dimen/event_type_icon_size"
                android:layout_height="@dimen/event_type_icon_size"
                android:background="@drawable/bg_badge_attention"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivEventType"
                    android:layout_width="@dimen/icon_size_md"
                    android:layout_height="@dimen/icon_size_md"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_fall_alert"
                    android:contentDescription="@string/fall_alert"
                    app:tint="@color/alertPrimary" />

            </FrameLayout>

            <!-- Event Type Text -->
            <TextView
                android:id="@+id/tvEventType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_md"
                android:textColor="@color/onBackground"
                android:textSize="@dimen/text_body_large"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/impactBadge"
                app:layout_constraintStart_toEndOf="@id/eventIconContainer"
                app:layout_constraintTop_toTopOf="@id/eventIconContainer"
                tools:text="Fall Detected" />

            <!-- Device ID + Timestamp Row -->
            <LinearLayout
                android:id="@+id/metaRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_md"
                android:layout_marginTop="@dimen/spacing_xs"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/eventIconContainer"
                app:layout_constraintTop_toBottomOf="@id/tvEventType">

                <TextView
                    android:id="@+id/tvDeviceId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/text_body_small"
                    tools:text="ESP32_01" />

                <TextView
                    android:id="@+id/tvTimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:textColor="@color/textMuted"
                    android:textSize="@dimen/text_body_small"
                    tools:text="â€¢ Jan 29, 10:47 PM" />

            </LinearLayout>

            <!-- Impact Value Badge -->
            <TextView
                android:id="@+id/impactBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_badge_impact"
                android:paddingHorizontal="@dimen/badge_padding_horizontal"
                android:paddingVertical="@dimen/badge_padding_vertical"
                android:textColor="@color/badgeImpactText"
                android:textSize="@dimen/text_label"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="3.05g" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Status Footer Banner -->
        <LinearLayout
            android:id="@+id/statusBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/badgeAttentionBackground"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/spacing_sm">

            <ImageView
                android:id="@+id/ivStatusIcon"
                android:layout_width="@dimen/icon_size_sm"
                android:layout_height="@dimen/icon_size_sm"
                android:src="@drawable/ic_warning"
                android:contentDescription="@string/event_unhandled"
                app:tint="@color/badgeAttentionText" />

            <TextView
                android:id="@+id/tvHandledStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_sm"
                android:textColor="@color/badgeAttentionText"
                android:textSize="@dimen/text_body_small"
                android:textStyle="bold"
                tools:text="Needs Attention" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
