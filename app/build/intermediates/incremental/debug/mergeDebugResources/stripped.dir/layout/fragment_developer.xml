<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:text="@string/developer_mode"
            android:textColor="@color/colorSecondary"
            android:textSize="@dimen/text_headline_medium"
            android:textStyle="bold" />

        <!-- FCM Token Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:text="@string/fcm_token"
            android:textColor="@color/onSurfaceMuted"
            android:textSize="@dimen/text_label"
            android:textAllCaps="true" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="0dp"
            app:strokeColor="@color/cardBorder"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_md">

                <TextView
                    android:id="@+id/tvFcmToken"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_md"
                    android:fontFamily="monospace"
                    android:maxLines="4"
                    android:textColor="@color/onSurfaceMuted"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/text_body_small"
                    tools:text="dK8x9_abc123..." />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCopyToken"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/copy_token"
                    android:textColor="@color/colorSecondary"
                    app:strokeColor="@color/colorSecondary" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Test Tools Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:text="Test Tools"
            android:textColor="@color/onSurfaceMuted"
            android:textSize="@dimen/text_label"
            android:textAllCaps="true" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg"
            app:cardBackgroundColor="@color/cardBackground"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="0dp"
            app:strokeColor="@color/cardBorder"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_md">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSimulateEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    android:text="@string/simulate_event"
                    app:backgroundTint="@color/alertPrimary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSendTestNotification"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/send_test_notification"
                    android:textColor="@color/colorSecondary"
                    app:strokeColor="@color/colorSecondary" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- About -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Developer Mode is for testing only.\nDo not share your FCM token publicly."
            android:textColor="@color/onSurfaceMuted"
            android:textSize="@dimen/text_body_small" />

    </LinearLayout>
</ScrollView>
