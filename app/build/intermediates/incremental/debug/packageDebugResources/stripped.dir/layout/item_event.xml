<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/spacing_xs"
    app:cardBackgroundColor="@color/cardBackground"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="0dp"
    app:strokeColor="@color/cardBorder"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_md">

        <!-- Event Type Icon -->
        <ImageView
            android:id="@+id/ivEventType"
            android:layout_width="@dimen/event_type_icon_size"
            android:layout_height="@dimen/event_type_icon_size"
            android:src="@drawable/ic_fall_alert"
            android:contentDescription="Event"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/alertPrimary" />

        <!-- Event Type -->
        <TextView
            android:id="@+id/tvEventType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:textColor="@color/onBackground"
            android:textSize="@dimen/text_body_large"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/tvHandledStatus"
            app:layout_constraintStart_toEndOf="@id/ivEventType"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Fall Detected" />

        <!-- Handled Status Badge -->
        <TextView
            android:id="@+id/tvHandledStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/statusOnline"
            android:textSize="@dimen/text_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Handled" />

        <!-- Device ID -->
        <TextView
            android:id="@+id/tvDeviceId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:layout_marginTop="@dimen/spacing_xs"
            android:textColor="@color/onSurfaceMuted"
            android:textSize="@dimen/text_body_small"
            app:layout_constraintStart_toEndOf="@id/ivEventType"
            app:layout_constraintTop_toBottomOf="@id/tvEventType"
            tools:text="ESP32_01" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/tvTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:textColor="@color/onSurfaceMuted"
            android:textSize="@dimen/text_body_small"
            app:layout_constraintStart_toEndOf="@id/tvDeviceId"
            app:layout_constraintTop_toBottomOf="@id/tvEventType"
            tools:text="â€¢ Jan 27, 3:45 PM" />

        <!-- Impact Value -->
        <TextView
            android:id="@+id/tvImpact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondary"
            android:textSize="@dimen/text_body_medium"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/ivEventType"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHandledStatus"
            tools:text="3.05g" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
